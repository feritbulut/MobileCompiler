<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCompiler.CompilerPage"
             Title="Compiler Page">
    <ScrollView>
    <VerticalStackLayout Padding="20">
            <HorizontalStackLayout>
             <Image x:Name="LanguageImage" HeightRequest="30" Margin="0,0,25,10"/>
                <Label x:Name="languageLabel" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,10"/>
            </HorizontalStackLayout>
            <Editor x:Name="codeEditor" HeightRequest="200" Placeholder="Write your code here..." BackgroundColor="DimGray" TextColor="White" PlaceholderColor="White"/>
            <Button Text="Run â–¶" FontAttributes="Bold" FontFamily="Comic Sans MS" Clicked="OnRunClicked" Margin="0,15,0,10" TextColor="White" CornerRadius="50"/>
        <Label Text="Output:" FontSize="18"/>
            <Label x:Name="outputLabel" FontSize="16" BackgroundColor="Black" TextColor="#44bd32"/>
        
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>